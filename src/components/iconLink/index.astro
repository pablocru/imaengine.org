---
import type { HTMLAttributes } from "astro/types";

export interface AnchorAttributes extends HTMLAttributes<"a"> {
  href: string | URL;
}

interface Props extends AnchorAttributes {
  anchorText: string;
}

const { anchorText, ...props } = Astro.props;
---

<a {...props}>
  <slot />
  <span>{anchorText}</span>
</a>

<style>
  a:any-link {
    /* Remove default anchor styles */
    color: inherit;
    text-decoration: none;
  }

  a {
    /* Add button appearance */
    padding: 0.3em 0.5em 0.5em;
    border: 1px solid;
    border-radius: 8px;
  }

  @supports (display: flex) {
    /* Place icon and text centered vertically */
    a {
      display: inline-flex;
      align-items: center;
      gap: 0.35em;
    }
  }
</style>
