---
import SeoTags, { type Props as SeoTagsProps } from "./SeoTags.astro";

export type Props = Partial<SeoTagsProps>

const { seoTags } = Astro.props;
---

{
  seoTags ? (
    // Create SEO related head tags
    <SeoTags seoTags={seoTags} />
  ) : (
    // Disallow all crawlers to index this page
    <meta name="robots" content="noindex, nofollow" />
  )
}
