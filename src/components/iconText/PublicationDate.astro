---
import CalendarIcon from "@components/icon/Calendar.astro";
import FormattedDate from "@components/FormattedDate.astro";
import IconText from "./index.astro";

export interface Props {
  pubDate: Date;
}

const { pubDate, ...props } = Astro.props;
---

<IconText {...props}>
  <CalendarIcon />
  <FormattedDate date={pubDate} />
</IconText>
