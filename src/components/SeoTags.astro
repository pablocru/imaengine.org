---
export type Props = {
  seoDescription: string;
  seoTitle: string;
  author?: string;
};

const { seoDescription, seoTitle, author } = Astro.props;
---

{/* Primary Meta Tags */}
<meta name="title" content={seoTitle} />
<meta name="description" content={seoDescription} />

{/* Optional Author tag */ !!author && <meta name="author" content={author} />}

{/* Canonical URL */}
<link rel="canonical" href={Astro.url} />

{/* Improve crawlers index */}
<link rel="sitemap" href="/sitemap-index.xml" />
