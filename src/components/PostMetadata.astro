---
import PublicationDateIconText, {
  type Props as PublicationDateProps,
} from "@components/iconText/PublicationDate.astro";
import ReadingTimeIconText, {
  type Props as ReadingTimeProps,
} from "@components/iconText/ReadingTime.astro";

interface Props extends PublicationDateProps, ReadingTimeProps {}

const { postBody, pubDate, ...props } = Astro.props;
---

<aside class="post-metadata" {...props}>
  <PublicationDateIconText pubDate={pubDate} />
  <ReadingTimeIconText postBody={postBody} />
</aside>
