---
import { getEntry, type DataEntryMap } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";

const COLLECTION = "staticPage";

interface Props {
  section: keyof DataEntryMap[typeof COLLECTION];
}

const { section } = Astro.props;

const {
  data: { pageDescription, seoDescription, seoTitle, tabTitle, title },
} = await getEntry(COLLECTION, section);
---

<BaseLayout seoDescription={seoDescription} seoTitle={seoTitle} tabTitle={tabTitle}>
  <h1>{title}</h1>
  <p>{pageDescription}</p>
  <slot />
</BaseLayout>
