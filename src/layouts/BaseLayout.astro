---
import "@styles/fonts.css";
import "@styles/global.css";
import "@styles/reset.css";
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import SeoHead, { type Props as SeoHeadProps } from "@components/SeoHead.astro";

interface Props extends SeoHeadProps {
  tabTitle: string;
}

const { tabTitle, seoTags } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    {/* Minimum head tags that should be present */}
    <meta charset="UTF-8" />
    <title>{tabTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {/* SEO handler */}
    <SeoHead seoTags={seoTags} />

    {/* Improve crawlers index */}
    <link rel="sitemap" href="/sitemap-index.xml" />

    {/* Identify Astro and its version as the framework used to generate this site */}
    <meta name="generator" content={Astro.generator} />
  </head>

  <body>
    <header>
      <Navbar />
    </header>

    <slot />

    <Footer />
  </body>
</html>
