---
import "@styles/fonts.css";
import "@styles/reset.css";
import Navbar from "@components/Navbar.astro";
import SeoTags, { type Props as SeoTagsProps } from "@components/SeoTags.astro";

interface Props extends SeoTagsProps {
  tabTitle: string;
}

const { seoDescription, seoTitle, tabTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    {/* Minimum head tags that should be present */}
    <meta charset="UTF-8" />
    <title>{tabTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {/* SEO related head tags */}
    <SeoTags seoDescription={seoDescription} seoTitle={seoTitle} />

    {/* Identify Astro and its version as the framework used to generate this site */}
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>
