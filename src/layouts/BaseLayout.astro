---
import "@styles/fonts.css";
import "@styles/global.css";
import "@styles/reset.css";
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import SeoTags, { type Props as SeoTagsProps } from "@components/SeoTags.astro";

interface Props {
  tabTitle: string;
  seoTags?: SeoTagsProps;
}

const { seoTags, tabTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    {/* Minimum head tags that should be present */}
    <meta charset="UTF-8" />
    <title>{tabTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {
      /* SEO related head tags */
      seoTags ? (
        <SeoTags seoDescription={seoTags.seoDescription} seoTitle={seoTags.seoTitle} />
      ) : (
        <meta name="robots" content="noindex, nofollow" />
      )
    }

    {/* Identify Astro and its version as the framework used to generate this site */}
    <meta name="generator" content={Astro.generator} />
  </head>

  <body>
    <header>
      <Navbar />
    </header>

    <slot />

    <Footer />
  </body>
</html>
