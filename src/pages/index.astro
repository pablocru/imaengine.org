---
import BlogCategoryOverview from "@components/BlogCategoryOverview.astro";
import StaticPageLayout from "@layouts/StaticPageLayout.astro";
import type { ValidBlogCategory } from "@content/config";

const categoryOrder: ValidBlogCategory[] = ["industries", "resources"];
---

<StaticPageLayout section="index">
  {
    !!categoryOrder.length &&
      categoryOrder.map((category) => <BlogCategoryOverview category={category} />)
  }
</StaticPageLayout>
