---
import { getEntry } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";

const title = "Legal Notice and General Terms of Use";

const {
  data: { companyName, email, nif },
} = await getEntry("siteInformation", "index");
---

<BaseLayout tabTitle={title}>
  <main class="small-layout">
    <h1 id="legal-notice">{title}</h1>

    <section id="general-information">
      <h2>General Information</h2>
      <p>
        In compliance with the duty of information provided in Law 34/2002 on Services of
        the Information Society and Electronic Commerce (LSSI-CE) of
        <time datetime="2002/07/11">July 11</time>, the following general information
        about this website is provided:
      </p>
      <ul>
        <li>
          <strong>Website owner</strong>: <span translate="no" set:text={companyName} />
        </li>
        <li><strong>NIF</strong>: {nif}</li>
        <li><strong>Email</strong>: {email}</li>
      </ul>
    </section>

    <section id="general-terms-condition-use">
      <h2>General Terms and Conditions of Use</h2>

      <section id="website">
